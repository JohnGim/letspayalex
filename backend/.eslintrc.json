{
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-console": "off",
      "quotes": [2, "double", { "avoidEscape": true }],
      "no-else-return": "off",
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".json"],
            "paths": ["./node_modules", "./src"]
          }
        }
    }
  }
  